.col-center {
  display: flex;
  flex-direction: column; /* 垂直排列 */
  align-items: center; /* 水平居中 */
  justify-content: center; /* 垂直居中 */
}
.col-center_controll {
  display: flex;
  flex-direction: column; /* 垂直排列 */
  align-items: center; /* 水平居中 */
  justify-content: center; /* 垂直居中 */
  color: blueviolet;
}
/* 文字与图片的间距 */
.text-below-image {
  margin-top: 8px; /* 调整间距 */
  text-align: center; /* 文字水平居中 */
}

